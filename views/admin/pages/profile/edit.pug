extends ../../layouts/default.pug

block content
    .container.mt-5.pt-4
        .card.shadow-sm.border-0.rounded-3
            .card-body.p-4
                h3.mb-3.text-primary Chỉnh sửa hồ sơ
                hr

                form(method="POST", action=prefixName + "/profile/edit?_method=PATCH", enctype="multipart/form-data")
                    .row
                        // Avatar
                        .col-md-3.text-center
                            if manager.avatar
                                img.rounded-circle.mb-3(
                                    src=manager.avatar,
                                    alt="avatar",
                                    width="120",
                                    height="120"
                                )
                            else
                                i.fas.fa-user-circle.fa-5x.text-secondary.mb-3

                            .mb-3
                                input.form-control.form-control-sm(
                                    type="file",
                                    name="avatar",
                                    accept="image/*"
                                )

                        // Thông tin
                        .col-md-9
                            .mb-3
                                label.form-label Họ và tên
                                input.form-control(
                                    type="text",
                                    name="fullName",
                                    value=manager.fullName,
                                    required
                                )

                            .mb-3
                                label.form-label Email
                                input.form-control(
                                    type="email",
                                    name="email",
                                    value=manager.email,
                                    readonly
                                )

                            .mb-3
                                label.form-label Số điện thoại
                                input.form-control(
                                    type="text",
                                    name="phone",
                                    value=manager.phone || ''
                                )

                            .mb-3
                                label.form-label Mô tả bản thân
                                textarea.form-control(
                                    name="description",
                                    rows="4"
                                ) #{manager.description || ''}


                            .d-flex.justify-content-end.mt-4
                                a.btn.btn-outline-secondary.me-2(
                                    href=prefixName + "/profile"
                                ) Hủy
                                button.btn.btn-primary(type="submit") Lưu thay đổi
