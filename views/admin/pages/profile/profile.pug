extends ../../layouts/default.pug

block content
    .container.mt-5.pt-4
        .card.shadow-sm.border-0.rounded-3
            .card-body.p-4
                h3.mb-3.text-primary Hồ sơ cá nhân
                hr
                .row
                    .col-md-3.text-center
                        if manager.avatar
                            img.rounded-circle.mb-3(src=manager.avatar, alt="avatar", width="120", height="120")
                        else
                            i.fas.fa-user-circle.fa-5x.text-secondary.mb-3
                        a.btn.btn-outline-primary.btn-sm(href=prefixName + "/profile/edit") Chỉnh sửa hồ sơ
                    .col-md-9
                        dl.row
                            dt.col-sm-4 Họ và tên
                            dd.col-sm-8 #{manager.fullName || 'Chưa cập nhật'}

                            dt.col-sm-4 Email
                            dd.col-sm-8 #{manager.email}

                            dt.col-sm-4 Vai trò
                            dd.col-sm-8 #{manager.role || 'Quản trị'}

                            dt.col-sm-4 Ngày tạo
                            dd.col-sm-8 #{manager.createdAt ? manager.createdAt.toLocaleString() : '-'}
