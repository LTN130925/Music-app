extends ../../layouts/default

block content
    .container-fluid.py-4
        .card.shadow-sm.border-0.rounded-4
            .card-body.p-4
                h4.fw-bold.text-dark.mb-4 Cập nhật vai trò

                // Form cập nhật vai trò
                form(method='POST', action=prefixName + '/role/edit/' + role._id + '?_method=PATCH')
                    .row.g-4
                        // ===== Tên vai trò =====
                        .col-md-6
                            label.form-label.fw-semibold(for='title') Tên vai trò
                            input.form-control.shadow-sm(
                                type='text',
                                id='title',
                                name='title',
                                placeholder='Nhập tên vai trò',
                                required,
                                value=role.title
                            )

                        // ===== Mô tả =====
                        .col-md-12
                            label.form-label.fw-semibold(for='description') Mô tả
                            textarea.form-control.shadow-sm.tinymce-editor(
                                id='description',
                                name='description',
                                rows='4',
                                placeholder='Nhập mô tả vai trò...'
                            )= role.description

                        .col-md-6
                            label.form-label.fw-semibold(for='role') Vai trò
                            select.form-select.shadow-sm(name='role', id='role', required)
                                option(value='') -- Chọn vai trò --
                                if roles && roles.length
                                    each r in roles
                                        option(value=r._id selected=r._id === role.role)= r.title
                                else
                                    option(value='') Không có vai trò nào

                        // ===== Trạng thái =====
                        .col-md-6
                            label.form-label.fw-semibold(for='status') Trạng thái
                            select.form-select.shadow-sm(name='status', id='status')
                                option(value='active', selected=(role.status === 'active')) Active
                                option(value='inactive', selected=(role.status === 'inactive')) Inactive

                    hr.my-4

                    .d-flex.justify-content-end.gap-2
                        a.btn.btn-light.border.shadow-sm(href=prefixName + '/role')
                            i.fas.fa-arrow-left.me-2
                            | Quay lại
                        button.btn.btn-primary.shadow-sm(type='submit')
                            i.fas.fa-save.me-2
                            | Cập nhật
