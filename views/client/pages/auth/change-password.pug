extends ../../layouts/auth.pug
include ../../mixins/box-head

block auth
    .auth-container
        .auth-card
            +box-head("Đăng nhập")
            form(action=`/auth/change-password?email=${email}` method="POST")
                .form-group
                    label(for="password") Mật khẩu
                    input#password(type="password" name="password" placeholder="Nhập mật khẩu..." required)

                .form-group
                    label(for="password") Mật khẩu
                    input#password(type="password" name="confirm-password" placeholder="Nhập mật khẩu xác thực..." required)

                button.btn-primary(type="submit") Đăng nhập