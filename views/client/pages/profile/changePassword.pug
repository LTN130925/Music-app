extends ../../layouts/default.pug

block content
    .container.mt-5.pt-4
        .card.shadow-sm.border-0.rounded-3
            .card-body.p-4
                h3.mb-3.text-warning Thay đổi mật khẩu
                hr

                // Thông tin người dùng (chỉ hiển thị)
                .mb-3
                    label.form-label Họ và tên
                    p.form-control-plaintext #{user.fullName}

                .mb-3
                    label.form-label Email
                    p.form-control-plaintext #{user.email}

                hr

                form(
                    method="POST",
                    action="/profile/change-password"
                )
                    .mb-3
                        label.form-label Mật khẩu mới
                        input.form-control(
                            type="password",
                            name="password",
                            required
                        )

                    .mb-3
                        label.form-label Xác nhận mật khẩu
                        input.form-control(
                            type="password",
                            name="confirm-password",
                            required
                        )

                    .d-flex.justify-content-end.mt-4
                        a.btn.btn-outline-secondary.me-2(
                            href="/profile"
                        ) Hủy
                        button.btn.btn-warning(type="submit") Cập nhật mật khẩu
