//- Sidebar
aside#sidebar.hidden
    hr(style="border: none; height: 1px; background-color: rgba(255,255,255,0.3); margin: 12px 16px;")

    - const sidebarMap1 = {'home': 'Trang chủ', 'topic': 'Chủ đề', 'singer': 'Ca sĩ'}
    ul.list-group.list-group-flush
        each url, key in sidebarMap1
            li.list-group-item
                a(href='/' + key)= url

    hr(style="border: none; height: 1px; background-color: rgba(255,255,255,0.3); margin: 12px 16px;")

